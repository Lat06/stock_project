<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.GroupController"
      spacing="10.0">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TableView fx:id="groupTable">
        <columns>
            <TableColumn fx:id="nameColumn" text="Назва"/>
            <TableColumn fx:id="descriptionColumn" text="Опис"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Додати" onAction="#onAdd"/>
        <Button text="Редагувати" onAction="#onEdit"/>
        <Button text="Видалити" onAction="#onDelete"/>
    </HBox>
</VBox>
