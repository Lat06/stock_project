<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.ProductFormController"
          hgap="10" vgap="10" padding="20">

    <Label text="Назва:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Опис:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Виробник:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="manufacturerField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Кількість:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="quantityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Ціна:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="priceField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Група:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <ComboBox fx:id="groupComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
        <Button text="Зберегти" onAction="#onSave"/>
        <Button text="Скасувати" onAction="#onCancel"/>
    </HBox>
</GridPane>
